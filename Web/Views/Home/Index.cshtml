@model Web.Models.HomeModel
@{
    ViewBag.Title = "Josh Radginski";
}
<section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
    <div class="my-auto">
        <h1 class="mb-0">
            Josh
            <span class="text-primary">Radginski</span>
        </h1>
        <div class="subheading mb-5">
            (636) 357-2665 ·
            <a href="mailto:jradginski@gmail.com">jradginski@gmail.com</a>
        </div>
        <ul>
            <li>Manager/Team Lead/Senior Developer with more than 7 years of professional experience within information technology.</li>
            <li>Full system life cycle experience: Project planning, design, coding, testing, bug fixing, deployment, documentation and maintenance.</li>
            <li>Strong technical abilities in creating database-enabled Internet/Intranet applications using various languages and platforms.</li>
            <li>Skilled in crafting efficient, standalone executables and middle-layer DLLs using .Net technologies, focusing on C#.</li>
            <li>Experienced in software project lifecycle management, technical training, relational database analysis, mentoring, design, coding and scripting.</li>
            <li>Demonstrate excellent written & verbal communication skills, initiative, creativity, and teamwork, with strong desire to excel.  Thrives on new technology and is very eager to learn.</li>
        </ul>
        <ul class="list-inline list-social-icons mb-0">
            <li class="list-inline-item">
                <a href="https://www.linkedin.com/in/josh-radginski-b8566425/" target="_blank">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="https://github.com/jradginski" target="_blank">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </li>
        </ul>
    </div>
</section>
<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
    <div class="my-auto">
        <h2 class="mb-5">Skills</h2>
        @foreach (KeyValuePair<string, string> skill in Model.Skills)
        {<p>
            <div class="subheading mb-3 font-weight-bold">@skill.Key.ToString()</div>
            <span>@skill.Value.ToString()</span>
        </p>
        }
    </div>
</section>
<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
    <div class="my-auto">
        <h2 class="mb-5">Experience</h2>
        @foreach (var m in Model.WorkHistroy.OrderByDescending(x => x.StartDate))
        {
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h3 class="mb-0">@m.Title.ToString()</h3>
                    <div class="subheading mb-3">@m.Name.ToString(), @m.Location.ToString()</div>
                    <ul>
                        @foreach (var li in m.JobDetails)
                        {
                            <li>@li.ToString()</li>
                        }
                    </ul>
                </div>
                <div class="resume-date text-md-right">
                    <span class="text-primary">@m.StartDate.ToString("MM/yyyy") - @m.EndDate.ToString("MM/yyyy")</span>
                </div>
            </div>
        }
    </div>
</section>
<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
    <div class="my-auto">
        <h2 class="mb-5">Education</h2>
        @foreach (var m in Model.Education.OrderByDescending(x => x.StartDate))
        {
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h3 class="mb-0">@m.Name.ToString(), @m.Location.ToString()</h3>
                    <div class="subheading mb-3">@m.DegreeType.ToString() : @m.Title.ToString()</div>
                </div>
            </div>
        }
    </div>
</section>

<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
    <div class="my-auto">
        <h2 class="mb-5">Interests</h2>
        @foreach (var interest in Model.Interests)
        {
            <p>@interest.ToString()</p>
        }
    </div>
</section>
<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="faq">
    <div class="my-auto">
        <h2 class="mb-5">FAQ</h2>
        @foreach (KeyValuePair<string, string> faq in Model.FAQ)
        {<p>
            <div class="subheading mb-3 font-weight-bold">@faq.Key.ToString()</div>
            <span>@faq.Value.ToString()</span>
        </p>
        }
    </div>
</section>